{% extends 'base.html.twig' %}

{% block title %}Bienvenue | Synexta
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/styles/home.css">
{% endblock %}

{% block body %}

	<div>
		<section class="py-5" id="contact">
			<div class="container px-5 my-5 px-5">
				<div class="text-center mb-5">
					<div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
						<i class="fa fa-envelope"></i>
					</div>
					<h2 class="fw-bolder">Formulaire</h2>
					<p class="lead mb-0">Remplissez votre formulaire</p>
				</div>
				<div class="row gx-5 justify-content-center">
					<div class="col-lg-6">
						{{ form_start(contactForm) }}
						<div class="form-error">
							{{ form_errors(contactForm) }}
						</div>
						<div class="form-group">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(contactForm.lastName) }}
									{{ form_label(contactForm.lastName) }}
									<div class="form-error">
										{{ form_errors(contactForm.lastName) }}
									</div>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(contactForm.firstName) }}
									{{ form_label(contactForm.firstName) }}
									<div class="form-error">
										{{ form_errors(contactForm.firstName) }}
									</div>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(contactForm.email) }}
									{{ form_label(contactForm.email) }}
									<div class="form-error">
										{{ form_errors(contactForm.email) }}
									</div>
								</div>
							</div>
						</div>

						<div class="form-group">
							{{ form_widget(contactForm.isAccepted) }}
							{{ form_label(contactForm.isAccepted) }}
							<div class="form-error">
								{{ form_errors(contactForm.isAccepted) }}
							</div>
						</div>

						<div class="mt-2">
							{{ form_widget(contactForm.submit) }}
							{{ form_widget(contactForm.cancel) }}
						</div>
						{{ form_end(contactForm) }}
						
						{% for message in app.flashes('success') %}
							<div class="alert alert-dismissible alert-success mt-2">
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
								{{message}}
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
